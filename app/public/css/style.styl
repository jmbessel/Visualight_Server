// login form //

#login-page
	width 960px
	margin 0 auto
	@media screen and (max-device-width:960px), (max-width:960px)
		width 100%
		margin 0 0
	#login-nav
		padding 10px 0 20px 0
		img
			width 400px
			@media screen and (max-device-width:960px), (max-width:960px)
				width 400px
	#video-container
		float left
		width 600px
		@media screen and (max-width:960px)
			margin 0 auto
			float none
		@media screen and (max-device-width: 960px), (max-width:600px)
			display none  
	#video-link
		display none
		float left
		font-color black
		font-size 20px
		width 100%
		text-align center
		@media screen and (max-device-width: 960px), (max-width:600px)
			display inline
	#login-container
		margin 0
		margin-left 20px
		float left
		@media screen and (max-width:960px)
			width 600px
			float none
			margin 0 auto
		@media screen and (max-device-width: 960px), (max-width:600px)
			width 100%
			margin-left 0
			padding-bottom 10px
			padding-top 40px
		form
			width 300px
			padding-bottom 36px
			@media screen and (max-device-width: 960px), (max-width:960px)
				width auto
		label
			margin 10px 0 5px 0
			@media screen and (max-device-width: 960px), (max-width:960px)
				float left
				clear both
		input
			@media screen and (max-device-width: 960px), (max-width:960px)
				float left
				clear both
		button
			width 150px
			padding 6px 40px 6px 40px
			float left
			margin-top 15px
			@media screen and (max-device-width: 960px), (max-width:960px)
				clear both
		label#remember-me
			@media screen and (max-device-width: 960px), (max-width:960px)
				float left
				clear none
		.checkbox
			margin 23px 0 0 180px
			text-align center
			margin-top 10px
			padding-bottom 18px
			@media screen and (max-device-width: 960px), (max-width:960px)
				text-align left
				margin-left 0
		.checkbox input[type="checkbox"]
			@media screen and (max-device-width: 960px), (max-width:960px)
				text-align left
				margin-left 0
		#create-account
			float right
			margin-right 13px	
		#forgot-password 
			float left
			margin-left 10px
	#about-text
		padding 20px 0
		margin-bottom 20px
		clear both
		p
			font-size 22px
			line-height 140%
			font-weight bold
			padding 0 40px

